<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e4dfb4"
        android:padding="10dp"
        android:gravity="center_horizontal">

        <FrameLayout
            android:id="@+id/austria_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/austria_title"
                    style="@style/CountryTitle"
                    android:text="@string/austria" />

                <LinearLayout
                    android:id="@+id/austria"
                    android:layout_width="450dp"
                    android:layout_height="300dp"
                    android:layout_below="@id/austria_title"
                    android:orientation="vertical"

                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#ff0000"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#ff0000"
                        android:orientation="vertical">

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/poland_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/austria_main">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/poland_title"
                    style="@style/CountryTitle"
                    android:text="@string/poland" />

                <LinearLayout
                    android:id="@+id/poland"
                    android:layout_width="450dp"
                    android:layout_height="300dp"
                    android:layout_below="@id/poland_title"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#ff0000"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/italy_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/poland_main">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/italy_title"
                    style="@style/CountryTitle"
                    android:text="@string/italy" />

                <LinearLayout
                    android:id="@+id/italy"
                    android:layout_width="450dp"
                    android:layout_height="300dp"
                    android:layout_below="@id/italy_title"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00ff00"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ff0000"
                        android:orientation="horizontal">

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/columbia_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/italy_main">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/columbia_title"
                    style="@style/CountryTitle"
                    android:text="@string/columbia" />

                <LinearLayout
                    android:id="@+id/columbia"
                    android:layout_width="450dp"
                    android:layout_height="300dp"
                    android:layout_below="@id/columbia_title"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="#ffff00"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#0000ff"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#ff0000"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/madagascar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/columbia_main">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/madagascar_title"
                    style="@style/CountryTitle"
                    android:text="@string/madagascar" />

                <LinearLayout
                    android:id="@+id/madagascar"
                    android:layout_width="450dp"
                    android:layout_height="300dp"
                    android:layout_below="@id/madagascar_title"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="#ff0000"
                            android:orientation="vertical">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="#00ff00"
                            android:orientation="vertical">

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/thailand_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/madagascar_main">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/thailand_title"
                    style="@style/CountryTitle"
                    android:text="@string/thailand" />

                <LinearLayout
                    android:id="@+id/thailand"
                    android:layout_width="450dp"
                    android:layout_height="300dp"
                    android:layout_below="@id/thailand_title"
                    android:orientation="vertical"
                    android:weightSum="6">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#ff0000"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="#0000ff"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#ff0000"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/denmark_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/thailand_main">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/denmark_title"
                    style="@style/CountryTitle"
                    android:text="@string/denmark" />

                <LinearLayout
                    android:layout_width="450dp"
                    android:layout_height="300dp"
                    android:layout_below="@id/denmark_title"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:weightSum="7">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:background="#ff0000">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="#ffffff">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:background="#ff0000">

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="318dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:weightSum="7">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:background="#ff0000">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="#ffffff">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:background="#ff0000">

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>
        </FrameLayout>


    </RelativeLayout>

</ScrollView>
