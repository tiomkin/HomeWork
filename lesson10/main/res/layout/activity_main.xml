<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="by.tut.tiomkin.homework10.MainActivity"
    android:gravity="center_vertical|center_horizontal">

    <TextView
        android:id="@+id/main_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ваши координаты:"
        android:textAllCaps="true"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/main_ll"
        android:layout_below="@id/main_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_ll_tv2_title"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Широта:"
            android:textAllCaps="true"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/main_ll_tv2_latitude"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="25,2224"
            android:textAllCaps="true"
            android:textSize="18dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_ll_2"
        android:layout_below="@id/main_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_ll2_tv1_title"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Долгота:"
            android:textAllCaps="true"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/main_ll2_tv2_longitude"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="16,1124"
            android:textAllCaps="true"
            android:textSize="18dp"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>
